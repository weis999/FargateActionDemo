{
    "volumes": [
        {
            "name": "application_wordpress",
            "host": {}
        },
        {
            "name": "application_mysql",
            "host": {}
        }
    ],
    "memory": "512",
    "cpu": "256",
    "family": "TestTask",
    "requiresCompatibilities": [
        "EC2",
        "FARGATE"
    ],
    "containerDefinitions": [
        {
            "name": "mysql",
            "image": "mysql:latest",
            "portMappings": [
                {
                    "containerPort": 3306,
                    "hostPort": 3306,
                    "protocol": "tcp"
                }
            ],
            "essential": false,
            "environment": [
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "password"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "root"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "password"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "TNO"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "application_mysql",
                    "containerPath": "/var/lib/mysql"
                }
            ]
        },
        {
            "name": "wordpress",
            "image": "weis999/aws_wordpress_tno:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "WORDPRESS_DB_NAME",
                    "value": "TNO"
                },
                {
                    "name": "WORDPRESS_TABLE_PREFIX",
                    "value": "wp_"
                },
                {
                    "name": "WORDPRESS_DB_HOST",
                    "value": "localhost"
                },
                {
                    "name": "WORDPRESS_DB_USER",
                    "value": "root"
                },
                {
                    "name": "WORDPRESS_DB_PASSWORD",
                    "value": "password"
                },
                {
                    "name": "WP_HOME",
                    "value": "http://localhost"
                },
                {
                    "name": "WP_SITEURL",
                    "value": "http://localhost"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "application_wordpress",
                    "containerPath": "/var/www/html"
                }
            ]
        }
    ],
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::334142185887:role/ecs-devops-sandbox-execution-role",
    "taskRoleArn": "arn:aws:iam::334142185887:role/ecs-devops-sandbox-execution-role"
}
